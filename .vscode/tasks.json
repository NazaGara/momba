{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Autoformat Project",
            "type": "shell",
            "command": "${config:python.pythonPath}",
            "args": [
                "-m",
                "black",
                "${workspaceRoot}/momba",
                "${workspaceRoot}/tests"
            ],
            "problemMatcher": []
        },
        {
            "label": "Typecheck Project",
            "type": "shell",
            "command": "${config:python.pythonPath}",
            "args": [
                "-m",
                "mypy",
                "${workspaceRoot}/momba"
            ],
            "problemMatcher": []
        },
        {
            "label": "Build Docs",
            "type": "shell",
            "command": "${config:python.pythonPath}",
            "args": [
                "-m",
                "sphinx",
                "${workspaceRoot}/docs",
                "${workspaceRoot}/build/docs"
            ],
            "problemMatcher": []
        }
    ]
}